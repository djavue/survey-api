{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitAny": true,
    "experimentalDecorators": true, // typeorm
    "emitDecoratorMetadata": true, // typeorm
    "outDir": "./dist/",
    "pretty": true,
    "removeComments": true,
    "sourceMap": true,
    "target": "es6"
  },
  "exclude": [
    "node_modules",
    "dist/node_modules"
  ],
  "typeRoots": [
    "node_modules/@types",
    "src/@types"
  ]
}
